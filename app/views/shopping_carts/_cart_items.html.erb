<%# app/views/shopping_carts/_cart_items.html.erb %>
<%= turbo_frame_tag "cart_items" do %>
  <% if cart.cart_items.any? %>
    <div class="space-y-4">
      <% cart.cart_items.each do |item| %>
        <%= turbo_frame_tag dom_id(item) do %>
          <div class="flex items-center gap-4 p-4 border rounded">
            <div class="w-24">
              <%= image_tag item.pokemon_product.sprite_url, class: "w-full" if item.pokemon_product.sprite_url.present? %>
            </div>
            
            <div class="flex-1">
              <h3 class="text-lg font-bold"><%= item.pokemon_product.name %></h3>
              <p class="text-gray-600"><%= item.pokemon_product.description %></p>
            </div>
            
            <div class="text-right">
              <p class="font-bold">$<%= number_with_precision(item.pokemon_product.price * item.quantity, precision: 2) %></p>
              <p class="text-sm text-gray-600">Qty: <%= item.quantity %></p>
            </div>
            
            <%= button_to "Remove", cart_item_path(item), method: :delete,
                class: "text-red-500 hover:text-red-700",
                form: { class: "inline-block" } %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600 text-center py-8">Your cart is empty</p>
    <%= link_to "Continue Shopping", root_path, class: "block text-center mt-4 text-blue-500 hover:text-blue-600" %>
  <% end %>
<% end %>