<%# app/views/shopping_carts/show.html.erb %>
<div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
  <h1 class="text-2xl font-bold mb-6 dark:text-white">Your Shopping Cart</h1>
  
  <%= render "cart_items", cart: @cart %>
  <% if @cart.cart_items.any? %>
    <%= render "cart_total", cart: @cart %>
    <%# Continue Shopping link between total and checkout %>
    <div class="text-center my-4">
      <%= link_to "Continue Shopping", root_path, 
          class: "inline-block px-6 py-2 text-blue-500 hover:text-blue-600 dark:text-blue-400 dark:hover:text-blue-300",
          data: { turbo_frame: "_top" } %>
    </div>
    <%= render "checkout_button" %>
  <% else %>
    <div class="text-center my-4">
      <%= link_to "Continue Shopping", root_path, 
          class: "inline-block px-6 py-2 text-blue-500 hover:text-blue-600 dark:text-blue-400 dark:hover:text-blue-300",
          data: { turbo_frame: "_top" } %>
    </div>
  <% end %>
</div>